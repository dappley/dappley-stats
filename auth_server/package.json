{
  "name": "dappley-stats-api",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "dependencies": {
    "@tsed/ajv": "^5.27.3",
    "@tsed/common": "^5.27.3",
    "@tsed/core": "^5.27.3",
    "@tsed/di": "^5.27.3",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "^0.0.42",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/sqlite3": "^3.1.5",
    "ajv": "^6.10.2",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.3",
    "express-jwt": "^5.3.1",
    "fs-extra": "^8.1.0",
    "http-status-codes": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "pm2": "^3.5.1",
    "source-map-support": "^0.5.13",
    "sqlite3": "^4.0.9",
    "tracer": "^0.9.8",
    "ts-httpexceptions": "^4.1.0",
    "ts-log-debug": "^5.1.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typedoc": "^0.15.0"
  },
  "scripts": {
    "compile": "tsc",
    "start-compiler": "tsc -w",
    "start-dev": "tsc && pm2 start --name auth-server --watch --no-daemon main.js",
    "test": "jest --silent --verbose",
    "lint": "tslint '**/*.ts' -c tslint.json",
    "start": "pm2 start --name auth-server --log auth-server.log main.js && tail -f auth-server.log",
    "stop": "pm2 delete auth-server",
    "restart": "yarn stop; yarn start",
    "docgen": "typedoc --mode modules --hideGenerator --excludeExternals --externalPattern '**/node_modules/**' --out docs/public",
    "docserver": "node docs/server"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.spec.ts|tsx"
    ]
  }
}
